 >>   ;; show the image in the visible world
 >>   (define (show pict)
 >>     (send visible begin-edit-sequence)
 >>     (send visible lock #f)
 >>     (let ([s (send visible find-first-snip)]
 >>           [c (send visible get-canvas)])
